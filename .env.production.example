# =============================================================================
# ZEUGMA PLATFORM - PRODUCTION ENVIRONMENT TEMPLATE
# =============================================================================
#
# Copy this file to .env and fill in your production values
# NEVER commit this file to version control!
#
# =============================================================================

# ==============================================
# ENVIRONMENT SELECTION
# ==============================================
DJANGO_ENV=production

# ==============================================
# DJANGO CORE SETTINGS
# ==============================================
# Generate a new secret key with:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here-generate-a-new-one

# MUST be False in production!
DEBUG=False

# Your domain names (comma-separated, no spaces)
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# ==============================================
# DATABASE SETTINGS - PostgreSQL
# ==============================================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=zeugma_db
DB_USER=zeugma_user
DB_PASSWORD=your-strong-database-password
DB_HOST=localhost
DB_PORT=5432

# ==============================================
# REDIS SETTINGS
# ==============================================
# Used for caching, sessions, Celery, and WebSockets
REDIS_URL=redis://localhost:6379/0

# ==============================================
# EMAIL SETTINGS - SMTP
# ==============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=Zeugma Platform <your-email@gmail.com>

# ==============================================
# FRONTEND SETTINGS
# ==============================================
FRONTEND_URL=https://yourdomain.com

# Additional CORS origins (comma-separated, no spaces)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# CSRF SETTINGS
# ==============================================
CSRF_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ==============================================
# AI API KEYS
# ==============================================
AI_PROVIDER=gemini
GEMINI_API_KEY=your-gemini-api-key

# ==============================================
# PUSH NOTIFICATIONS (VAPID)
# ==============================================
# Generate new keys with: python generate_vapid.py
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_CLAIMS_EMAIL=admin@yourdomain.com

# ==============================================
# ADMIN NOTIFICATIONS
# ==============================================
ADMIN_EMAIL=admin@yourdomain.com
